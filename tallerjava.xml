<?xml version="1.0" encoding="UTF-8"?>
<project name="tallerjava" default="all">
  
  
  <property file="tallerjava.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-32.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.bluecove-2.1.0.classpath">
    <pathelement location="${basedir}/lib/bluecove-2.1.0.jar"/>
  </path>
  
  <path id="library.lib.classpath">
    <pathelement location="${basedir}/lib/BrowserLauncher2-1_3.jar"/>
    <pathelement location="${basedir}/lib/JTattoo-1.6.11.jar"/>
    <pathelement location="${basedir}/lib/RXTXcomm.jar"/>
    <pathelement location="${basedir}/lib/commons-digester-2.1.jar"/>
    <pathelement location="${basedir}/lib/commons-logging-1.2-javadoc.jar"/>
    <pathelement location="${basedir}/lib/commons-logging-1.2.jar"/>
    <pathelement location="${basedir}/lib/h2-1.3.172.jar"/>
    <pathelement location="${basedir}/lib/jasper-compiler-jdt-5.5.15.jar"/>
    <pathelement location="${basedir}/lib/jasperreports-5.0.0.jar"/>
    <pathelement location="${basedir}/lib/jcalendar-1.3.3.jar"/>
    <pathelement location="${basedir}/lib/jcommon-1.0.21.jar"/>
    <pathelement location="${basedir}/lib/jfreechart-1.0.17-swt.jar"/>
    <pathelement location="${basedir}/lib/jfreechart-1.0.17.jar"/>
    <pathelement location="${basedir}/lib/jfreesvg-1.4.jar"/>
    <pathelement location="${basedir}/lib/mail.jar"/>
    <pathelement location="${basedir}/lib/org.apache.commons.collections.jar"/>
    <pathelement location="${basedir}/lib/swingx.jar"/>
    <pathelement location="${basedir}/lib/swt-4.3.jar"/>
    <pathelement location="${basedir}/lib/swt-debug.jar"/>
    <pathelement location="${basedir}/lib/swt.jar"/>
    <pathelement location="${basedir}/lib/swtgraphics2d.jar"/>
  </path>
  
  <path id="library.rxtxcomm.classpath">
    <pathelement location="${basedir}/rxtx-2.1-7-bins-r2/RXTXcomm.jar"/>
  </path>
  
  <path id="library.tallerjava.classpath">
    <pathelement location="${basedir}/dist/tallerJava.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module tallerJava -->
  
  <dirname property="module.tallerjava.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.tallerjava" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tallerjava" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tallerjava" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tallerjava" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="tallerjava.output.dir" value="${module.tallerjava.basedir}/out/production/tallerJava"/>
  <property name="tallerjava.testoutput.dir" value="${module.tallerjava.basedir}/out/test/tallerJava"/>
  
  <path id="tallerjava.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tallerjava.module.production.classpath">
    <path refid="${module.jdk.classpath.tallerjava}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.rxtxcomm.classpath"/>
    <path refid="library.tallerjava.classpath"/>
    <path refid="library.bluecove-2.1.0.classpath"/>
  </path>
  
  <path id="tallerjava.runtime.production.module.classpath">
    <pathelement location="${tallerjava.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.rxtxcomm.classpath"/>
    <path refid="library.tallerjava.classpath"/>
    <path refid="library.bluecove-2.1.0.classpath"/>
  </path>
  
  <path id="tallerjava.module.classpath">
    <path refid="${module.jdk.classpath.tallerjava}"/>
    <pathelement location="${tallerjava.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.rxtxcomm.classpath"/>
    <path refid="library.tallerjava.classpath"/>
    <path refid="library.bluecove-2.1.0.classpath"/>
  </path>
  
  <path id="tallerjava.runtime.module.classpath">
    <pathelement location="${tallerjava.testoutput.dir}"/>
    <pathelement location="${tallerjava.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.rxtxcomm.classpath"/>
    <path refid="library.tallerjava.classpath"/>
    <path refid="library.bluecove-2.1.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tallerjava">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tallerjava">
    <patternset refid="excluded.from.module.tallerjava"/>
  </patternset>
  
  <path id="tallerjava.module.sourcepath">
    <dirset dir="${module.tallerjava.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tallerjava" depends="compile.module.tallerjava.production,compile.module.tallerjava.tests" description="Compile module tallerJava"/>
  
  <target name="compile.module.tallerjava.production" depends="register.custom.compilers" description="Compile module tallerJava; production classes">
    <mkdir dir="${tallerjava.output.dir}"/>
    <javac2 destdir="${tallerjava.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tallerjava}/javac">
      <compilerarg line="${compiler.args.tallerjava}"/>
      <bootclasspath refid="tallerjava.module.bootclasspath"/>
      <classpath refid="tallerjava.module.production.classpath"/>
      <src refid="tallerjava.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tallerjava"/>
    </javac2>
    
    <copy todir="${tallerjava.output.dir}">
      <fileset dir="${module.tallerjava.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tallerjava.tests" depends="register.custom.compilers,compile.module.tallerjava.production" description="compile module tallerJava; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tallerjava" description="cleanup module">
    <delete dir="${tallerjava.output.dir}"/>
    <delete dir="${tallerjava.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.tallerjava" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.tallerjava" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.tallerjava" value="${basedir}/out/artifacts/tallerJava"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.tallerJava.jar" value="${artifacts.temp.dir}/tallerJava.jar"/>
    <property name="temp.jar.path.tallerJava.jar2" value="${artifacts.temp.dir}/1/tallerJava.jar"/>
    <mkdir dir="${artifacts.temp.dir}/1"/>
  </target>
  
  <target name="artifact.tallerjava" depends="init.artifacts, compile.module.tallerjava" description="Build &#39;tallerJava&#39; artifact">
    <property name="artifact.temp.output.tallerjava" value="${artifacts.temp.dir}/tallerJava"/>
    <mkdir dir="${artifact.temp.output.tallerjava}"/>
    <jar destfile="${temp.jar.path.tallerJava.jar2}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${tallerjava.output.dir}"/>
    </jar>
    <jar destfile="${temp.jar.path.tallerJava.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${temp.jar.path.tallerJava.jar2}"/>
      <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.tallerJava.jar}" tofile="${artifact.temp.output.tallerjava}/tallerJava.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.tallerjava" description="Build all artifacts">
    <mkdir dir="${artifact.output.tallerjava}"/>
    <copy todir="${artifact.output.tallerjava}">
      <fileset dir="${artifact.temp.output.tallerjava}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>